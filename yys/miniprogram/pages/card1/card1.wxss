.loading {
  width: 100%;
  height: 100%;
  text-align: center;
  margin-top: 300px;
}

.resultCon {
  width: 100%;
  text-align: center;
  margin-bottom: 50px;
}

.resultItem {
  width: 85%;
  margin: 10px auto;
  display: block;
  border: 1px solid #333;
}

.table {
  width: 85%;
  margin: 10px auto;
  text-align: center;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.td {
  width: 40%;
  height: 3rem;
  justify-content: center;
  text-align: center;
  border-bottom: 1px solid #333;
  border-left: 1px solid #333;
  align-items: center;
  display: flex;
}

.last {
  border-right: 1px solid #333;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #E6F3F9;
}

.th {
  width: 40%;
  justify-content: center;
  background: #f6f6f6;
  color: #333;
  display: flex;
  height: 3rem;
  align-items: center;
  border-top: 1px solid #333;
  border-bottom: 1px solid #333;
  border-left: 1px solid #333;
}

.btn {
  display: inline;
  border: 1px solid #333;
  font-weight: lighter;
  margin: 5px auto;
}