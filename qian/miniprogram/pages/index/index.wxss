page {
    background: #576fc7;
    font-weight: lighter;
}

.top-container {
    width: 100%;
    padding: 20px 0 20px 0;
    border-radius: 0 0 10px 10px;
    background-color: #405cc0;
    color: #fff;
    margin-bottom: 20px;
}

.name-txt {
    text-align: center;
    font-weight: bold;
    font-size: 30px;
}

.progress-box {
    width: 50%;
    margin: 20px auto;
}

.progress-txt {
    text-align: center;
    margin: 4px auto;
}

.progress-txt-l {
    left: 10px;
}

.progress-txt-r {
    right: 10px;
}

.list-box {
    width: 80%;
    margin: 10px auto;
    display: block;
    border-radius: 10px;
}

.icon {
    width: 32px;
    height: 32px;
}

.list-item {
    display: block;
    padding: 2px;
}

.list-item.head {
    color: #fff;
    font-weight: bold;
    padding: 10px;
}

.list-item.title {
    text-align: right;
    font-weight: bold;
}

.list-txt.r {
    float: right;
}

.list-add {
    width: 100%;
    display: block;
}

.list-input {
    color: #fff;
    border-bottom: 1px dashed rgba(255, 255, 00, 0.4);
    height: 30px;
    padding: 10px;
}

.list-btn {
    width: 100%;
    color: #fff;
}

.list-btn-over {
    background: none;
}


.arrow {
    margin-left: 20px;
    width: 0;
    height: 0;
    border-right: 10px solid #576fc7;
    border-bottom: 10px solid #405cc0;
    border-left: 10px solid #576fc7;
}

.content {
    width: 90%;
    background-color: #405cc0;
    border-radius: 10px;
    padding: 2px;
}