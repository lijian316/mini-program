page {
  background: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.line {
  clear: both;
  font-weight: lighter;
  text-align: center;
  color: #333333;
  font-size: 14px;
  margin: 20px auto;
  display: block;
}

.img-box {
  text-align: center;
}

.img {
  width: 120px;
  height: 120px;
  margin: 40% auto 0 auto;
}

.tip-btn {
  padding: 5px;
  margin: 5px 0px;
  border: 1px solid #07c160;
  width: 70px;
  text-align: center;
  color: #07c160;
}

.no-group {
  text-align: center;
  width: 90%;
  margin: 20px auto;
  display: block;
}

.no-btn {
  float: left;
  width: auto;
  background-color: #e8e8e8;
  border-radius: 0.285rem;
  color: rgba(0, 0, 0, 0.6);
  font-size: small;
  padding: 0.6rem;
  margin: 2px;
  border: 1px solid #e8e8e8;
}

.quick-search-group {
  position: absolute;
  top: 50px;
  background: #f7f8fa;
  width: 90%;
  left: 4%;
  padding: 2% 1%;
  z-index: 100;
}

.txt-item {
  margin: 1px;
}

.bottom {
  margin-bottom: 10px;
}